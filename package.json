    "@webext-core/messaging": "^2.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "envin": "^1.1.3",
    "fuse.js": "^7.0.0",
    "lucide-react": "^0.487.0",
    "marked": "^15.0.12",
    "next-themes": "^0.4.6",
    "npm-run-all": "^4.1.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sonner": "^2.0.5",
