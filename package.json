{
  "name": "watchlater-transcripts",
  "version": "0.1.0",
  "description": "Extract transcripts from YouTube Watch Later videos in bulk for research and note-taking.",
  "license": "MIT",
  "author": "YouTube Watch Later Enhanced",
  "scripts": {
    "build": "run-p build:chrome build:firefox",
    "build:chrome": "wxt zip",
    "build:firefox": "wxt -b firefox zip",
    "dev": "bun dev:chrome",
    "dev:chrome": "wxt",
    "dev:firefox": "wxt -b firefox",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "typecheck": "tsc --noEmit",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
